############################################################
# Example Environment Variables (DO NOT COMMIT REAL SECRETS)
# Copy to a local .env file and fill in real values locally.
# Render / other hosting: set these via dashboard, not .env.
############################################################

# --- Backend (Spring Boot) ---
# Server
SERVER_PORT=8443

# Database connection
DB_HOST=localhost
DB_PORT=3306
DB_NAME=calendardb
DB_USERNAME=calendaruser
DB_PASSWORD=changeme_user_password_here
DB_USE_SSL=false

# Optional root password if initializing local MySQL
DB_ROOT_PASSWORD=changeme_root_password_here

# Spring profile
SPRING_PROFILES=prod

# Google OAuth (obtain from Google Cloud Console)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8443/login/oauth2/code/google

# JWT secret (generate a long random string for production)
JWT_SECRET=devJwtSecretChangeMe
JWT_EXPIRATION_MS=86400000

# Redis caching
APP_CACHE_REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
# REDIS_PASSWORD=

# SMTP Email (optional) - leave blank if not used
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password

# --- Frontend (Vite) ---
# Base URL the frontend uses to call backend
VITE_API_BASE_URL=http://localhost:8443
VITE_ENVIRONMENT=development
# Expose Google Client ID for frontend OAuth flow
VITE_GOOGLE_CLIENT_ID=${GOOGLE_CLIENT_ID}

# --- CORS ---
# Comma-separated list of allowed origins for backend
ALLOWED_ORIGINS=http://localhost:5173
# Allowed HTTP methods (comma-separated)
ALLOWED_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS

# Other optional analytics / feature flag placeholders
# VITE_SENTRY_DSN=
# VITE_FEATURE_INVITATIONS=true

# DO NOT put any secrets only needed server-side in VITE_* variables.
